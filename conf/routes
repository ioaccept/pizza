# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index

POST        /addUser             controllers.UserController.addUser
GET         /welcomeUser         controllers.UserController.welcomeUser(username)
GET         /registerUser        controllers.UserController.registerUser

GET         /showUsers           controllers.LoginController.showUsers

POST        /showUser            controllers.LoginController.showUser
GET         /showUser            controllers.LoginController.showUser

GET         /loginUser           controllers.LoginController.loginUser(username)
GET         /loginStuff          controllers.LoginController.loginStuff(username)

POST        /addOrder            controllers.OrderController.addOrder(username)

GET         /myOrder             controllers.OrderController.showOrders(username)


# REST API
GET         /api                 rest.Api.api
GET         /api/users           rest.Users.users
GET         /api/user/:id        rest.Users.user(id: Long)
POST        /api/user            rest.Users.addUser
DELETE      /api/user/:id        rest.Users.rmUser(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)
